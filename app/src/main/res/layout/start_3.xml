<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#2c8089d3">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NID"
        style="@style/button_text2"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_centerInParent="true"
        style="@style/button_style"
        android:id="@+id/NID"
        android:hint="@string/NID"
        android:textColorHint="@color/button_text"
        android:background="@drawable/text_background"
        android:inputType="number"
        android:maxLength="10"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:layout_alignParentBottom="true"
        style="@style/button_style"


        android:background="@drawable/button_animation"
        android:id="@+id/btnStart_3" />
</RelativeLayout>